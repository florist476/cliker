<MainWindow>:

    FloatLayout: #допомагає розмістити елемент
        Image:
            source: '62ed95e4b5e826a8b0960e54b1a11019.jpg'
        BoxLayout:
            orientation: "vertical"
            Label:
                id:score_lbl
                text: "Рахунок"
            FloatLayout:
                Image:
                    id: artifact
                    source: "png-clipart-apple-logo-apple-logo-heart-logo-thumbnail.png"
                    size_hint: 0.3, 0.3
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                Button:
                    text: "click"
                    size_hint: 0.3, 0.3
                    on_release: root.realize()
                    background_color: 255/255, 105/255, 180/255, 0.5
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_press: root.click()
            Button:
                text: "Магазин"
                on_press: root.on_shop_screen()

<ShopScreen>:
