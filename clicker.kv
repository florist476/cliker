        Image:
            source: '1427474063_dvorcovyy-most-копия.jpg'
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, 0.2
                Button:
                    text: "Назад"
                    size_hint: 0.5, 1
                    background_color: 1, 0, 0, 0.5
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_press: root.on_main_screen()
                Label:
                    text: "Рахунок"
            ScrollView:
